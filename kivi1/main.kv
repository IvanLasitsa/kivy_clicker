#:set color_btn_bg "#DAD4F7"
#:set color_txt_d "#C21460"
#:set color_btn_bg_pr "#4424D6"
#:set color_bg "#FEFE33"
#:set color_a "#B2D732"
#:set color_b "#347B98"


<ButtonMenu@Button>:
    size_hint_y: 0.3
    font_size: "30sp"
    color: color_txt_d
    background_color: color_btn_bg
    background_normal: ''
    on_release: self.background_color = color_btn_bg
    background_down: ''
    on_press: self.background_color = color_btn_bg_pr
    font_name: 'assets/TacOne-Regular.ttf'
    

<MenuScreen>:
    canvas.before:
        Color:
            rgba: 1,1,0,1
        Rectangle:
            pos:self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacting: '20dp'
        

        Label:
            text: 'Cosmo Adventure'
            font_name: 'assets/TacOne-Regular.ttf'
            font_size: '30dp'
            color: 'red'
            size_hint_y: .2
        
        Image:
            source: 'assets/images/apple.png'
            size_hint_y: .3
            allow_stretch: True

        Widget:
            size_hint_y: 0.3

        ButtonMenu:
            text: "Start"
            on_press: root.manager.current = 'game'
        ButtonMenu:
            text: "Lider Board"
        ButtonMenu:
            text: "Shop"
            on_press: root.manager.current = 'shop'


<GameScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            size_hint_y: 0.1
            Label:
                text: 'text: ' + str(root.points)
                font_name: 'assets/TacOne-Regular.ttf'
                font_size: '30dp'
                color: color_a
        FloatLayout:
            size_hint_y: 0.7
            Fruit:
                id: fruit
        Switch:
            id: my_switch
            active: False  # Початковий стан: неактивний
            on_active: root.ids.fruit.Auto_Clicker(self)

<Fruit>
    allow_stretch: True
    size_hint: None, None
    size: '200dp', '200dp'
    center: self.parent.center
        
<Shop>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout: 
            size_hint_y: 0.1
        ButtonMenu:
            text: 'AutoClicker'
            # on_press: root.manager.
        FloatLayout: 
            size_hint_y: 0.8
        ButtonMenu:
            text: 'back'
            on_press: root.manager.current = 'menu'

